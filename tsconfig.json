{
    "compilerOptions": {
      "target": "es6",
      "lib": ["es6", "dom"],
      "moduleResolution": "node",
      "typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "rootDir": "src",
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }